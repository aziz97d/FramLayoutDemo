<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffbb22"
    android:padding="10dp"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/img_hornbill"
            android:src="@drawable/hornbill"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <ImageView
            android:id="@+id/img_hummingbird"
            android:visibility="gone"
            android:src="@drawable/hummingbird"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <ImageView
            android:id="@+id/img_kingfisher"
            android:visibility="gone"
            android:src="@drawable/kingfisher"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <ImageView
            android:id="@+id/img_swift"
            android:visibility="gone"
            android:src="@drawable/swift"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
    </FrameLayout>


    <TextView
        android:id="@+id/txt_birds_name"
        android:paddingTop="10dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_birds_details"
        android:paddingTop="10dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
